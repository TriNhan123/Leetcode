class Solution:
    def myPow(self, x: float, n: int) -> float:
        if n == 0: 
            return 1 
        if n < 0: 
            return 1 / self.myPow(x, -n) 
        if n % 2 != 0:
            return x * self.myPow(x, n - 1) 
        return self.myPow(x * x, n / 2)
    
        # 2 10 = myPow(4, 5) = 4 * myPow(4, 4) 
        #= 4 * myPow(16, 2) 
        #= 4 * myPow(256, 1) 
        #= 4 * 256 * myPow(256, 0) = 1024 * 1 
